{
  "manifest_version": 3,
  "name": "Chatwork Thread Tool",
  "version": "1.0.0",
  "description": "Hiển thị thread chat từ Chatwork theo nhóm để dễ theo dõi",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.chatwork.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Chatwork Thread Tool",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
